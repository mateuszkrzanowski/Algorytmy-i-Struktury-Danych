#include <iostream>
using namespace std;
int main() {
int m, n;
cout << "Podaj ilosc wierszy m: ";
cin >> m;
cout << "Podaj ilosc kolumn n: ";
cin >> n;
int tab[m][n];
int suma = 0;
for (int i = 0; i < m; i++) {
for (int j = 0; j < n; j++) {
cout << "Podaj element: ";
cin >> tab[i][j];
suma = suma + tab[i][j];
}
}
cout << endl;
cout << "a. Zawartosc tablicy:" << endl;
for (int i = 0; i < m; i++) {
for (int j = 0; j < n; j++) {
cout << tab[i][j] << " ";
}
cout << endl;
}
cout << "b. Suma elementow: " << suma << endl;
int w, k;
cout << "c. Podaj numer wiersza (w) i kolumny (k): ";
cin >> w >> k;
if (w >= 1 && w <= m && k >= 1 && k <= n) {
cout << "Wybrany element: " << tab[w - 1][k - 1] << endl;
} else {
cout << "Nie ma takiego elementu." << endl;
}
return 0;
